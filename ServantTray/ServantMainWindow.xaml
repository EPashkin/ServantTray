<Window x:Class="ServantTray.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ServantTray"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Title="Servant" Height="350" Width="525">
    <Window.CommandBindings>
        <CommandBinding
            Command="{x:Static local:CustomCommands.Exit}"
            Executed="OnExit" CanExecute="ExitCanExecute"/>
    </Window.CommandBindings>
    <Grid>
        <tb:TaskbarIcon
            x:Name="TaskIcon"
            IconSource="/Icons/Bulb.ico"
            ToolTipText="Servant">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="First Menu Item" />
                    <MenuItem Header="Second Menu Item" />
                    <Separator/>
                    <MenuItem Header="Exit" Command="{x:Static local:CustomCommands.Exit}" CommandTarget="{Binding}"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>

    </Grid>
</Window>
